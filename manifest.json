{
    "manifest_version": 3,
    "name": "Twitter Hider - Hide Retweets and Threads",
    "version": "1.0",
    "author": "Alex Albert",
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "host_permissions": [
        "https://twitter.com/*"
    ],
    "permissions": [
      "activeTab",
      "storage",
      "tabs"
    ],
    "background": {
      "service_worker": "js/background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://twitter.com/*"],
        "css":["style.css"],
        "js":["js/hide.js", "/js/jquery-3.6.0.min.js"],
        "run_at": "document_end"
      }
    ]
  }